<% date_of_loan = @book.loans.unloanable(loan_date, quarantine_date) %>
<% if date_of_loan %>
  <% if date_of_loan <= loan_date %>
    In Quarantena.
  <% else %>
    In Prestito.
  <% end %>
  Non prestabile fino al <%= loan_from(date_of_loan) %>
<% end %>
<br />
<div class="btn-group" role="group" aria-label="Strumenti">
  <%= link_to 'Presta', new_loan_path("loan[book_id]": @book.id, "book_title": @book.title), class: "btn btn-primary" unless date_of_loan || !current_user %>
  <%= link_to 'Modifica', edit_book_path(@book), class: "btn btn-primary" if current_user %>
  <%= link_to 'Libri', books_path, class: "btn btn-primary" %>
</div>