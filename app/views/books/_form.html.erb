<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<% if book.persisted? %>
  <div class="form-group">
    <%= form.label :code %>
    <%= form.text_field :code, class: "form-control-plaintext", disabled: true %>
  </div>
<% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :authors %>
    <%= text_field_tag :authors, (book.authors.join(",") if book.authors), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :year %>
    <%= form.number_field :year, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :genre %>
    <%= form.text_field :genre, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :language %>
    <%= form.text_field :language, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :spot %>
    <%= form.text_field :spot, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :isbn %>
    <%= form.text_field :isbn, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :abstract %>
    <%= form.text_area :abstract, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :catalogue %>
    <%= form.text_field :catalogue, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
