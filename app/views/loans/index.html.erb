<h1><%= t('mongoid.models.loan.other') %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t('helpers.label.book_title') %></th>
      <th><%= t('mongoid.attributes.loan.date') %></th>
      <th><%= t('mongoid.attributes.loan.expected_return') %></th>
      <th><%= t('mongoid.attributes.loan.place') %></th>
      <th><%= t('mongoid.attributes.loan.reader') %></th>
      <th colspan="3" class="text-center"><span class="bi bi-tools"></span></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= link_to loan.book.title, loan.book %></td>
        <td><%= l loan.date %></td>
        <td><%= l loan.expected_return %></td>
        <td><%= loan.place %></td>
        <td><%= loan.reader %></td>
        <td>
          <%= link_to loan, title: "Visualizza" do %>
            <span class="bi bi-view-list"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_loan_path(loan), title: "Modifica" do %>
            <span class="bi bi-pencil-square"></span>
          <% end %>
        </td>
        <td>
          <%= link_to loan, method: :delete, data: { confirm: 'Sei sicuro?' }, title: "Cancella" do %>
            <span class="bi bi-trash"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @loans %>

<div class="btn-group" role="group" aria-label="Strumenti">
  <%= link_to 'Nuovo Prestito', new_loan_path, class: "btn btn-primary" %>
  <%= link_to 'Home', welcome_path, class: "btn btn-primary" %>
</div>